# Configuration file for the M5 PWR485 Motor Controller

# WiFi Settings
WIFI_SSID=YourWiFiSSID
WIFI_PASSWORD=YourWiFiPassword
WIFI_STATIC_IP=192.168.1.100  # Optional: set to empty for DHCP

# Access Point Settings (fallback mode)
AP_SSID=M5-Motor-Controller
AP_PASSWORD=12345678

# Web Server Settings
WEB_SERVER_PORT=80
ENABLE_CORS=true

# Motor Controller Settings
MOTOR_ID=1
RS485_BAUD_RATE=9600
RS485_RX_PIN=16
RS485_TX_PIN=17
RS485_DE_PIN=5

# Motor Parameters
MAX_SPEED_RPM=3000
ACCELERATION=1000
DECELERATION=1000
ENABLE_POSITION_LIMITS=false
MIN_POSITION=-100000
MAX_POSITION=100000

# Safety Settings
ENABLE_EMERGENCY_STOP=true
TEMPERATURE_LIMIT=80
CURRENT_LIMIT=10.0
VOLTAGE_MIN=10.0
VOLTAGE_MAX=30.0

# Display Settings
DISPLAY_UPDATE_INTERVAL_MS=100
STATUS_UPDATE_INTERVAL_MS=500
AUTO_REFRESH_STATUS=true

# Logging Settings
ENABLE_SERIAL_DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARN, ERROR